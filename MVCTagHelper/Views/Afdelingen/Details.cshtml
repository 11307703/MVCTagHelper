@model MVCTagHelper.Models.Afdeling

@{
    ViewData["Title"] = "Details";

    var card = new MVCTagHelper.ViewModels.AfdelingCard();
    card.AfdelingNaam = Model.AfdelingNaam;
    card.AfdelingId = Model.AfdelingId;
    card.LandCode = Model.Locatie.Land.LandCode;
    card.Locatie = Model.Locatie.Stad;
    card.Land = Model.Locatie.Land.LandNaam;
}

<h1>Details</h1>
<afdeling-card afdeling-card="@card"></afdeling-card>
<div>
    <h4>Afdeling</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AfdelingNaam)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AfdelingNaam)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Locatie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Locatie.LocatieId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.AfdelingId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
