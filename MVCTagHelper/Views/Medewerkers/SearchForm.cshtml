@using MVCTagHelper.ViewModels
@model SearchViewModel
<h4>Zoek een Medewerker op naam</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchForm">
            <div class="form-group">
                <label asp-for="SearchName" class="control-label"></label>
                <input asp-for="SearchName" class="form-control" />
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>